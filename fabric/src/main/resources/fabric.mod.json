{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_license}",

  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_authors}"
  ],
  "contact": {
    "sources": "${contact_sources}",
    "issues": "${contact_issues}",
    "homepage": "${contact_homepage}"
  },
  "license": "${mod_license}",
  "icon": "assets/simplewhitelist/icon.png",
  "environment": "*",
  "entrypoints": {
    "server": [
      "net.aniby.simplewhitelist.fabric.SimpleWhitelist"
    ]
  },
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": ">=${minecraft_version}",
    "java": ">=21"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "Author's Twitch channel": "https://twitch.tv/an1byvt"
      },
      "update_checker": true
    }
  }
}
